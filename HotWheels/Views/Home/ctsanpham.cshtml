
@{
    ViewData["Title"] = "ctsanpham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <p style="margin-top: 10px;">
        <a asp-action="Index">Trang chủ</a>
        <span> > @Model.TenSanPham</span>
    </p>
    <div class="row" style="border-bottom: 1px dashed black;">
        <div class="col-md-6 text-center">
            <img src="~/images/@Model.Anh" alt="lỗi" style="width: 100%;">
            <p style="margin-top: 10px;">@Model.TenSanPham</p>
        </div>
        <div class="col-md-6">
            <h4>@Model.TenSanPham</h4>
            <p style="color: red; font-size: 20px; font-weight: bold;">Giá: @Model.DonGia.ToString("#.###") VND</p>
            <a asp-action="Them" asp-route-id="@Model.ID_SanPham" class="btn btn-success">Mua hàng</a>
            <a asp-action="Index" style="display: block; margin-top: 10px;">Quay lại trang chủ mua hàng</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h4 style="margin-top: 15px;">Thông tin sản phẩm</h4>
            <ul style="padding: 0 15px;">
                <li>Tỷ lệ: @Model.TyLe</li>
                <li>Chất liệu: @Model.ChatLieu</li>
                <li>Xuất xứ: @Model.XuatXu</li>
            </ul>
            <h4>Mô tả</h4>
            <p>@Model.MoTa</p>
        </div>
    </div>
</div>
